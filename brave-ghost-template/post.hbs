{{!

	POST TEMPLATE
	- Configuration of this file is not required.

}}
{{!< default}}

	{{#post}}

		{{> post_feature_header}}

		<div class="container {{post_class}}">

			{{> sidebar_post}}

			<div class="content">

				{{! WIDGET - RESPONSIVE BLOG INFO }}
				<div class="widget postinfo_widget inline {{post_class}}">
					{{#if @blog.logo}}
					<a href="{{@blog.url}}" class="logo"><img src="{{@blog.logo}}" alt="{{@blog.title}}"></a>
					{{/if}}
				</div>

				<div class="postlist">

					{{! POST MAIN }}
					<article class="post standard single">
						{{> post_header}}
						<div class="postcontents">
							{{content}}
						</div>
						{{> post_footer}}
					</article>

					{{! WIDGET - AUTHOR INFO }}
					{{> widget_author}}

					{{! RESPONSIVE NAVIGATION }}
					<div class="inlinemenu">
						<div class="graybar">
							<a href="https://www.brave.com" class="logo left"><img src="/content/images/2016/04/brave_logo_big.png" alt="Brave Blog"></a>
							<div class="right"><i class="fa fa-bars"></i></div>
						</div>
						{{navigation}}
					</div>

				</div>
			</div>

		</div>

	{{/post}}
